<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.7" prefHeight="600.0" prefWidth="1200" style="-fx-background-color: -color-bg-default;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="heig.tb.jsmithfx.SmithController">

    <!--
        LEFT SIDE OF THE SPLITPANE: The Smith Chart
        We put the Canvas inside a simple Pane so we can bind its size
        to the pane's size, making the Canvas resizable.
    -->
    <Pane fx:id="smithChartPane">
        <Canvas fx:id="smithCanvas" />
    </Pane>

    <!--
        RIGHT SIDE OF THE SPLITPANE: The Control Panels
        A VBox is used to stack the different control sections vertically.
    -->
    <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <children>

            <!-- Section 1: List of current circuit elements -->
            <TitledPane animated="false" text="Circuit Elements">
                <ListView fx:id="elementListView" prefHeight="200.0" />
            </TitledPane>

            <!-- Section 2: Controls for adding a new component -->
            <TitledPane animated="false" text="Add Component">
                <GridPane hgap="10.0" vgap="10.0">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <Label text="Type:" GridPane.rowIndex="0" />
                    <ComboBox fx:id="typeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Value:" GridPane.rowIndex="1" />
                    <TextField fx:id="valueTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Position:" GridPane.rowIndex="2" />
                    <ComboBox fx:id="positionComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Button fx:id="addButton" onAction="#onAddComponent" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </TitledPane>
            <TitledPane animated="false" text="Cursor Values" collapsible="false">
                <content>
                    <GridPane hgap="10.0" vgap="10.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                        </padding>
                        <columnConstraints>
                            <!-- Column for parameter names (e.g., "Return Loss") -->
                            <ColumnConstraints hgrow="NEVER" halignment="LEFT"/>
                            <!-- Column for parameter values -->
                            <ColumnConstraints hgrow="ALWAYS" minWidth="80.0" halignment="LEFT"/>
                            <!-- Column for the second set of parameter names -->
                            <ColumnConstraints hgrow="NEVER" halignment="LEFT"/>
                            <!-- Column for the second set of parameter values -->
                            <ColumnConstraints hgrow="ALWAYS" minWidth="80.0" halignment="LEFT"/>
                        </columnConstraints>
                        <children>
                            <!-- Row 0: Return Loss & VSWR -->
                            <Label text="Return Loss" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="returnLossLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="VSWR" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <Label fx:id="vswrLabel" text="-"  GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                            <!-- Row 1: Q & Gamma -->
                            <Label text="Q" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="qLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Î“" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                            <Label fx:id="gammaLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                            <!-- Row 2: Admittance (Y) & Impedance (Z) -->
                            <Label text="Y" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="yLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Z" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                            <Label fx:id="zLabel" text="-"  GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                            <!-- Row 3: Characteristic Impedance (Zo) & Frequency -->
                            <Label text="Zo" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <Label fx:id="zoLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Freq" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                            <Label fx:id="freqLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                        </children>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- You can add more TitledPanes here for other features -->
            <!-- e.g., for displaying VSWR, Impedance, etc. -->

        </children>
    </VBox>

</SplitPane>
